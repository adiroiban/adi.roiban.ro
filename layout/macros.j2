{% macro render_badges() %}
<div class="sidemenu">
  <div class="textwidget">
    {% for item in website.badges -%}
      <a href="{{ item.url }}">
        <img src="{{ media_url(item.image) }}" alt="{{ item.name }}">
      </a>
    {%- endfor %}
  </div>
</div>  
{% endmacro %}


{% macro render_categories_nav() %}
<div class="sidemenu">
  <h3>Categories</h3>
  <ul>

    {% for tag in website.tags %}
    {% set tag_count = site.content.walk_resources_tagged_with(tag.name)|list|length %}
    <li class="cat-item cat-item-19">
      <a
        href="{{ content_url('tags/'~tag.name~'.html') }}"
        title="View all posts filed under {{ tag.title }}">
          {{ tag.title }}
      </a> ({{ tag_count }})
    </li>
    {% endfor %}
  </ul>
</div>
{% endmacro %}


{% macro render_comments(resource, cls=None) -%}
{% if resource.meta.comments -%}
<script type="text/javascript">
  var disqus_identifier = '{{ resource.url }}';
</script>
<div id="disqus_thread"></div>
<script type="text/javascript">
    var disqus_shortname = '{{ resource.meta.disqus }}';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
{%- endif %}
{%- endmacro %}


